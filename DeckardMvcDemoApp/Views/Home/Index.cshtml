@{
    ViewData["Title"] = "Home Page";
}
<div class="border border-dark">
    <div class="text-center mt-2" id="welcome">
        <h1 class="mb-5">Welcome to my demo app</h1>
    </div>
    <div class="col d-flex justify-content-center">
        <div class="card" style="width: 25rem;">
            <div class="card-body">
                <h5 class="card-title text-center">This app is build on .NET 6 using:</h5>
                <ul class="list-group border-light">
                    <li class="list-group-item"><a class="link-primary" href="https://learn.microsoft.com/en-us/dotnet/csharp/whats-new/csharp-10" target="_blank">C#</a></li>
                    <li class="list-group-item"><a class="link-primary" href="https://learn.microsoft.com/en-us/aspnet/core/mvc/overview?view=aspnetcore-6.0" target="_blank">MVC</a></li>
                    <li class="list-group-item"><a class="link-primary" href="https://learn.microsoft.com/en-us/sql/database-engine/configure-windows/sql-server-express-localdb?view=sql-server-ver16" target="_blank">Local Db</a></li>
                    <li class="list-group-item"><a class="link-primary" href="https://getbootstrap.com/docs/5.3/getting-started/introduction/" target="_blank">Bootstrap</a></li>
                    <li class="list-group-item"><a class="link-primary" href="https://api.jquery.com/" target="_blank">jQuery</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="text-center mt-5">
        <h5><p>You can review my app's code on <a class="link-success" href="https://github.com/gregdeckard/DeckardMvcDemoApp" target="_blank">GitHub</a> </p></h5>
        <h5>Please refer to the navigation menu for examples of functionality.</h5>
        <p class="mt-3">This is a work in progress. My goal is to create functionality first and then make the pages more attractive afterwards.</p>
    </div>
</div>

