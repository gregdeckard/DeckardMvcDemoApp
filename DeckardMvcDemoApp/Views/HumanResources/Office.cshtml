@using DeckardMvcDemoApp.ViewModels;
@model OfficeViewModel

<h1>Offices</h1>

<div class="row border border-1 border-dark p-2">
    <div class="col-6">
        <ul class="list-group">
            <li class="list-group">
                <div class="row">
                    <div class="col-6">
                        <label class="form-label">Building Name</label>
                    </div>
                    <div class="col-4">
                        <label class="form-label">Office Number</label>
                    </div>
                    <div class="col-2">
                        <label class="form-label">Update</label>
                    </div>
                </div>
            </li>
            @if (Model.Offices.Count == 0)
            {
                <li class="list-group-item">Where are all of your offices??!!!!</li>
            }
            else
            {
                @foreach (var office in Model.Offices)
                {
                    <li href="*" class="list-group-item" id="@office.Id">
                        <div class="row">
                            <div class="col-8">
                                @office.BuildingName
                            </div>
                            <div class="col-2 justify-content-start">
                                @office.OfficeNumber
                            </div>
                            <div class="col-2">
                                <a asp-controller="HumanResources" asp-action="OfficeUpdate" asp-route-id="@office.Id" class=""><i class="fa-solid fa-pen-to-square"></i></a>
                            </div>
                        </div>
                    </li>
                }
            }
        </ul>
    </div>
    <div class="col-6 border border-2 p-2">
        <form asp-controller="HumanResources" asp-action="CreateOffice" class="row g-3">
            <div class="col-md-6">
                <label class="form-label">Office Number</label>
                <input asp-for="@Model.OfficeNumber" type="number" class="form-control" id="officeNumber" value="" required>
            </div>
            <div class="col-md-6">
                <label class="form-label">Buildings</label>
                <select asp-for="@Model.BuildingId" asp-items="Model.Buildings" class="form-control" style="height:36px" required></select>
            </div>
            <div class="col-12">
                <button type="submit" class="btn btn-primary" id="btnCreateOffice">Quick Create</button>
            </div>
        </form>
    </div>
    <div class="mt-3">
        <a asp-controller="HumanResources" asp-action="Index"> Back to HR Main Page </a>
    </div>
</div>
