@using DeckardMvcDemoApp.ViewModels;
@model EmployeeViewModel

<h1>Update Employee</h1>

<div>
    <form asp-controller="HumanResources" asp-action="UpdateEmployee" class="row g-3">
        <input asp-for="@Model.Id" type="text" value="@Model.Id" hidden="hidden" />
        <div class="col-md-6">
            <label for="LastName" class="form-label">Last Name</label>
            <input asp-for="@Model.LastName" type="text" class="form-control" value="@Model.LastName">
        </div>
        <div class="col-md-6">
            <label for="FirstName" class="form-label">First Name</label>
            <input asp-for="@Model.FirstName" type="text" class="form-control" value="@Model.FirstName">
        </div>
        <div class="col-12">
            <button type="submit" class="btn btn-primary">Update</button>
        </div>
    </form>
    <div class="mt-3">
        <a asp-controller="HumanResources" asp-action="Employee" asp-route-id="@Model.Id"> Back to Employee List </a>
    </div>
</div>
